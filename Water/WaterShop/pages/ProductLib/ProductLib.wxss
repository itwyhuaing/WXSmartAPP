
.operationmsg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 36rp;
  line-height: 36rp;
  background-color: #FFEFD5;
  color: #FFA500;
  font-size: 26rpx;
  text-align: center;
}

.checkBoxCell {
  margin: 50rpx 20rpx;
  padding: 20rpx;
  border: solid 0.8rpx #ddd;
  border-radius: 16rpx;
}

.pname {
  padding: 10rpx 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  font-weight: bold;
  border-bottom: dashed 0.8rpx #ddd;
  /* border: solid 0.8rpx orange; */
}

.pname image {
  width: 50rpx;
  height: 50rpx;
}

.pdes {
  padding: 10rpx 15rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 24rpx;
  /* border: solid 0.8rpx red; */
}

.pdes .left image {
  width: 260rpx;
  height: 260rpx;
}

.pdes .right  {
  margin-left: 30rpx;
}

.pdes .right .price {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.pdes .right .price .unit {
  margin: 0 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  /* border: solid 0.8rpx red; */
}

.pdes .right .price input {
  width: 160rpx;
  height: 10rpx;
  border-bottom: solid 0.5rpx #888;
}

.pdes .right .actcnt {
  font-size: 24rpx;
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #888;
}

.pdes .right .addact {
  margin-top: 80rpx;
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: solid 0.8rpx #25B6ED;
  background-color: #25B6ED;
  color: white;
  border-radius: 25rpx;
}


.addProductFormat {
  margin: 30rpx 20rpx 160rpx;
  /* border: solid 0.8rpx orange; */
  border-top: dashed 1.5rpx #ddd;
}

.addProThem {
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
}

.addProDetail {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 0rpx 60rpx;
  font-size: 24rpx;
  /* border: solid 0.8rpx cyan; */
}

.addProInput {
  width: 300rpx;
  height: 46rpx;
  line-height: 46rpx;
  border: solid 1rpx #ddd;
}

.addProConfirm {
  width: 100rpx;
  height: 46rpx;
  line-height: 46rpx;
  /* border-radius: 23rpx; */
  background-color: #25B6ED;
  color: white;
  text-align: center;
  /* border: solid 0.8rpx purple; */
}