/* pages/Home/ShopList.wxss */
.container {
  /* width: 100%;
  height: 100%; */
  background-color: #eee;
}

.cl_menuitem {
  display: flex;
  flex-direction: row;
  height: auto;
  /* margin-top: 10rpx; */
  background-color: #fff;
  padding: 15rpx 20rpx;
}

.cl_menuitem .icon image {
  height: 200rpx;
  width: 200rpx;
}

.cl_menuitem .txtinfo {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  font-size: 28rpx;
  margin-left: 20rpx;
  border-bottom: solid 1rpx #ddd;
}

/* .txtinfo .txtcnt {
  border: solid 1rpx cyan;
} */

.txtinfo .name {
  color: #333;
  font-weight: bold;
}

.txtinfo .amount {
  margin-top: 8rpx;
  font-size: 24rpx;
}

.txtinfo .distance {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
  /* border: solid 0.8rpx red; */
}

.txtinfo .mark {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  font-size: 22rpx;
  margin-bottom: 20rpx;
  color: #666;
}

.txtinfo .mark text {
  margin: 8rpx 10rpx;
  padding: 3rpx 8rpx;
  border: solid 0.8rpx  #25B6ED;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}