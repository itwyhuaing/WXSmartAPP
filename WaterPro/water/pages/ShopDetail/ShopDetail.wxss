.shop-detail-scroll-view {
  background-color: #eee;
  height: 100%; 
  width: 100%;
}

.cl_mapadr_tel {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  border-bottom:  solid 2rpx #ddd;
  font-size: 24rpx;
  color: #333;
  background-color: #fff;
}

.cl_mapadr_tel image:first-child {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.cl_mapadr_tel image:last-child {
  width: 36rpx;
  height: 36rpx;
}

.cl_products_list {
  margin-top: 20rpx;
}

.switch-type {
  display: flex;
  background-color: #FFF;
  justify-content: center;
  padding: 15rpx 0;
  border-bottom: solid 1rpx #ddd;
}
.switch-type .btn:first-child {
  border: solid 1rpx #25B6ED;
  border-right: solid 0rpx #25B6ED;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.switch-type .btn:last-child {
  border: solid 1rpx #25B6ED;
  border-left: solid 0.5rpx #25B6ED;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.switch-type .btn {
  font-size: 28rpx;
  background: #fff;
  padding: 10rpx 46rpx;
}
.switch-type .btn.active {
  background: #25B6ED;
}

.cl_product_box .cl_product_lr {
  display: none;
}

.cl_product_box .pactive {
  display: block;
}

.cl_product_item {
  display: flex;
  flex-direction: row;
  justify-content: start;
  border-bottom: solid 1rpx #ddd;
  padding: 20rpx;
  background-color: #FFF;
}

.cl_product_item image {
  width: 150rpx;
  height: 150rpx;
}

.cl_product_item .cl_product_rp_txt {
  font: 26rpx;
  margin: 15rpx;
}

.cl_product_item .cl_price_unit {
  font-size: 22rpx;
  margin-left: 50rpx;
}

.cl_product_item .cl_price {
  margin-left: 2rpx;
}

