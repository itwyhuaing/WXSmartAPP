.orderlist_scroll {
  background-color: #eee;

}

.top_fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: white;
  /* border: solid 0.8rpx red; */
}

.top_fixed .switchtype {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 20rpx 0;
  /* border: solid 0.8rpx yellow; */
}

.top_fixed .switchtype view {
  font-size: 28rpx;
  padding: 13rpx 40rpx;
  border: solid 0.8rpx #25B6ED;
}

.top_fixed .switchtype view:first-child {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.top_fixed .switchtype view:last-child {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.top_fixed .acttype {
  background-color: #25B6ED;
  color: white;
}


.list {
  display: none;
  margin-top: 160rpx;
  border: solid 0.8rpx cyan;
}

.actlist {
  display: block;
}



.orderitem {
  background-color: white;
  margin: 30rpx;
  border: solid 0.8rpx purple;
}
