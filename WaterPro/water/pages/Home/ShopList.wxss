/* pages/Home/ShopList.wxss */
.home_container {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.cl_menuitem {
  display: flex;
  flex-direction: row;
  height: auto;
  /* margin-top: 10rpx; */
  background-color: #fff;
  padding: 15rpx 20rpx;
}

.cl_menuitem .icon {
  height: 150rpx;
  width: 150rpx;
}

.cl_menuitem .txtinfo {
  width: 100%;
  color: #333333;
  font-size: 28rpx;
  margin-left: 15rpx;
  border-bottom: solid 1rpx #ddd;
}

/* .txtinfo .txtcnt {
  border: solid 1rpx cyan;
} */

.txtinfo .name {
  font-weight: bold;
}

.txtinfo .amount {
  margin-top: 8rpx;
  font-size: 24rpx;
}

.txtinfo .distance {
  margin-top: 8rpx;
  font-size: 24rpx;
}

.txtinfo .distance text:last-child {
  margin-left: 50rpx;
  color: #25B6ED;
}

.txtinfo .mark {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  font-size: 22rpx;
  margin-bottom: 20rpx;
}

.txtinfo .mark text {
  margin: 8rpx 10rpx;
  padding: 3rpx 8rpx;
  border: solid 0.8rpx  #25B6ED;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}