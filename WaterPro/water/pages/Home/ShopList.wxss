.home_container {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.cl_menuitem {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  height: auto;/*300rpx;*/
  width: 100%;
  margin-top: 10rpx;
  background-color: #fff;
}

.cl_menuitem_icon {
  height: 160rpx;
  width: 160rpx;
  /* mode:aspectFill; */
  margin: 10rpx 0 10rpx 10rpx;
}

.cl_menuitem_txtinfo {
  /* background-color: red; */
  color: #333333;
  font-size: 28rpx;
  margin: 10rpx;
  font-size: 28rpx;
}

.cl_txtinfo_ad {
  font-size: 20rpx;
  margin: 10rpx 0 0;
  display: flex; 
  flex-direction: row;
  justify-content: space-between;
}

.cl_txtinfo_ab {
  margin: 10rpx 0 0;
}

.cl_txtinfo_b {
  margin-left: 20rpx;
}

